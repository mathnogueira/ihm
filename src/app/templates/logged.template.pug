block content

// Tarefas
.navbar.navbar-app.navbar-absolute-bottom
	.pull-left.icons-group
		a.btn.btn-default.btn-round.icon#listMyFavorites(ui-sref="MyFavorites")
			i.fa.fa-star
		a.btn.btn-default.btn-round.icon#listAllEvents(ui-sref="Logged")
			i.fa.fa-home
	.pull-right.icons-group
		a.btn.btn-default.btn-round.icon#addEvent(ui-sref="AddEvent", ng-if="!adding && !editing")
			i.fa.fa-plus
		a.btn.btn-default.btn-round.icon#removeEvent(ng-click="cancelAction()", ng-if="adding || editing")
			i.fa.fa-times
		a.btn.btn-default.btn-round.icon#addEvent(ng-click="confirmAction()", ng-if="adding || editing")
			i.fa.fa-check